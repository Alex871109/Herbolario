{% extends 'base.html.twig' %}

{% block contenedor_principal %}
  {% include 'comunes/_mensajes.html.twig' %}
    <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">
      Mis Plantas
    </h6>
      
   <table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Especie</th>
      <th scope="col">Origen</th>
      <th scope="col">Usos</th>
      <th scope="col">Herbolario con mejor precio</th>
    </tr>
  </thead>
  <tbody>
  {% set i=0 %}
  {% for planta in plantas %}
    <tr>
      <td> {{planta.nombre}}</td>
      <td> {{planta.especie}}</td>
      <td> {{planta.lugar}}</td>
      <td> 
          <ul>
          {% for uso in planta.uso %}
              <li>{{ uso }}</li>  {#requiere el metodo__Tostring porque es el objeto directo, no una prop#}
          {% endfor %}
          </ul>
      </td>
      <td> {{herbolarios[i]}}</td> {#requiere el metodo__Tostring porque es el objeto directo, no una prop#}
          {# {% endfor %} #}
    </tr>
    {% set i=i+1 %}
    {% else  %} 
       <p>No se encontraron Plantas</p>  
    {% endfor  %}
  </tbody>
</table>
      
      
  </div>

    <div class="d-md-flex my-2 my-lg-0">
        <a class="btn btn-outline-success mr-2 w-100 mb-3 mb-sm-0"  href="{{path('app_plantas_nueva')}}">
            Nueva
        </a>
    </div>


{% endblock %}


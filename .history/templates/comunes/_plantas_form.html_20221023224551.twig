<form class="form-control"  method="POST" >
  <div class="mb-3">
    <h1 class="form-label">Planta</h1>
  </div>
  <div class="mb-3">
    <label for="nombre"  class="form-label">Nombre</label>
    <input type="text" name="nombre" {% if accion %} value="{{planta.nombre}}" {% endif %}  class="form-control" >
  </div>
  <div class="mb-3">
    <label for="especie"    class="form-label">Especie</label>
    <input type="text" name="especie" {% if accion %} value="{{planta.especie}}" {% endif %}  class="form-control" >
  </div>
  <div class="mb-3">
    <label for="lugar"    class="form-label">Lugar de Origen</label>
    <input type="text" name="lugar" {% if accion %} value="{{planta.lugar}}" {% endif %}  class="form-control" >
  </div>

   <table class="table">
  <thead>
    <tr>
      <th scope="col">Uso #1</th>
      <th scope="col">Uso #2</th>
      <th scope="col">Uso #3</th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <th scope="row">{{contador}}</th>
      <td>{{herbolario.nombre}}</td>
      <td>{{herbolario.url}}</td>
      <td>
        <a href="{{path('app_editar_herbolario',{id:herbolario.id})}}" class="btn btn-link mg-3">
            <span class="oi oi-pencil" title="Editar" aria-hidden="true"></span>
        </a>
      </td>
            <td>
        <form method="post" action="{{path('app_eliminar_herbolario',{id:herbolario.id})}}" onsubmit="return confirm('Seguro quiere eliminar este elemento?');">
            <button class="btn btn-link mg-3">
                <span class="oi oi-delete" title="Eliminar" aria-hidden="true"></span>
            </button>
        </form>
      </td>
    </tr>
    {% set contador=contador+1 %}
  {% endfor %}
  </tbody>
</table>

  <button type="submit" class="btn btn-primary" >
    {% if accion %}      {#Cambio del texto del boton#}
      Editar
    {% else  %}
      AÃ±adir 
    {% endif %} 
  </button>
</form>